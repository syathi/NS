<%= notice %>
<h2>延滞一覧</h2>

<table>
  <thead>
    <tr>
      <th>顧客名</th>
      <th>商品名</th>
      <th>返却予定日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= User.find(reservation.userId).name %></td>
        <td><%= Clothe.find(reservation.clothesId).name %></td>
        <!--余裕があったらこう直す
        <td><#%= reservation.user.name %></td>
        <td><#%= reservation.clothe.name %></td>
        -->
        <td><%= reservation.returnDay %></td>
        <td><%= link_to 'アカウント凍結', freeze_user_path(reservation.userId), data:{ confirm:	 "本当に凍結させますか?" } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "戻る", :admin_top %></p>