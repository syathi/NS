<h2>未発送商品一覧</h2>
<table>
  <thead>
    <tr>
      <th>顧客名</th>
      <th>商品名</th>
      <th>返却予定日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.userId %></td>
        <td><%= reservation.clothesId %></td>
        <td><%= reservation.returnDay %></td>
        <td><%= link_to '発送する', forword_reservation_path(reservation), data:{ confirm:	 "発送します" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
