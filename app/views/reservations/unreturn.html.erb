<%= notice %>
<h2>未返却商品一覧</h2>
<table>
  <thead>
    <tr>
      <th>顧客名</th>
      <th>商品名</th>
      <th>返却予定日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.userId %></td>
        <td><%= reservation.clothesId %></td>
        <td><%= reservation.returnDay %></td>
        <td><%= link_to '消す', to_return_reservation_path(reservation), data:{ confirm:	 "本当に削除しますか?" } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to '戻る', :stafftop %></p>
