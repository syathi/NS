<h1>スタッフのパスワードを変更</h1>
<%= notice %>
<%= form_for(@staff) do |f| %>
<table>
	<tr>
		<td><%= f.label "前のパスワード:" %></td>
		<td><%= f.password_field :password %></td>
	</tr>
	<tr>
		<td><%= f.label "新しいパスワード:" %></td>
		<td><%= f.password_field :new_staff_password %></td>
	</tr>
	<tr>
		<td><%= f.label "新しいパスワードの再入力:" %></td>
		<td><%= f.password_field :new_staff_password_confirmation %></td>
	</tr>
	<tr>
		<td><%= f.submit "変更" %></td>
	</tr>
</table>
<% end %>
<%= link_to "戻る", :admin_top %>