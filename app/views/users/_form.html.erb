
<table class="attr">
  <tr>
    <th><%= form.label :name, "氏名" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :adress, "住所" %></th>
    <td><%= form.text_field :adress %></td>
  </tr>
  <tr>
    <th><%= form.label :tel, "電話番号" %></th>
    <td><%= form.text_field :tel %></td>
  </tr>
  <tr>
    <th><%= form.label :mail, "メールアドレス" %></th>
    <td><%= form.text_field :mail %></td>
  </tr>
   <tr>
   <th><%= form.label :secretques, "秘密の質問" %></th>
    <td> <% options = [["好きな食べ物",1],["好きな場所",2],["好きな映画",3],["ペットの名前",4],["好きな本",5]] %>
    <%= form.select :secretques, options %></td>
  </tr>
  <tr>
    <th><%= form.label :secretans, "秘密の答え" %></th>
    <td><%= form.text_field :secretans %></td>
  </tr>

  <tr>
    <th><%= form.label :password ,"パスワード"%></th>
    <td><%= form.password_field :password %></td>
  </tr>
  <tr>
    <th><%= form.label :password_confirmation ,"パスワードの確認" %></th>
    <td><%= form.password_field :password_confirmation %></td>
  </tr>
</table>

  <% unless @user.new_record? %>
    <p>パスワードを変更しないときは、パスワード入力欄を空にしてください。</p>
  <% end %>