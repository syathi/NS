<% @page_title = "会員の新規登録" %>
<h1>新規登録</h1>
<% if @user.errors.present? %>
 <div id="errors">
 <h3>エラーがあります</h3>
 <ul>
 	<% @user.errors.full_messages.each do |msg| %>
 	  <li><%= msg %></li>
 	<% end %>
 </ul>
 </div>
<% end %>

<%= form_for @user do |form| %>
	<%= render 'form' , form: form %>
	<p><%= form.submit %></p>
<% end %>

<%= link_to '戻る', users_path %>
