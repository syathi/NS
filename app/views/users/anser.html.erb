<table class="attr">
<% @page_title = "秘密の質問です" %>
<% if User.find_by(secretans: params[:anser]).present? then %>
<% @user = User.find_by(secretans: params[:anser]) %>

<HTML>
<HEAD><TITLE>パスワードを再発行します</TITLE></HEAD>
<BODY>

<tr>
    <th>パスワードを再発行します</th>
</tr>
<%= form_for @user do |form| %>
  <tr>
    <th><%= form.label :password ,"パスワード"%></th>
    <td><%= form.password_field :password %></td>
  </tr>
  <tr>
    <th><%= form.label :password_confirmation ,"パスワードの確認" %></th>
    <td><%= form.password_field :password_confirmation %></td>
  </tr>
  <tr>
    <td><%= form.hidden_field :id , :value => @user.id%></td>
    <!-- <td><%= form.hidden_field :id2 , :value => @user_id%></td>-->
  </tr>

 <tr>
    <%= form.submit "登録する" %>
  </tr>
<% end %>
<BR>

 <% else  %>
        <td><%= "秘密の質問の答えが違います" %></td>

     <% end %>

</FORM>
</BODY>
</HTML>