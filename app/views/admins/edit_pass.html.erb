<h1>管理者のパスワードを変更</h1>

<%= form_for(@admin) do |f| %>
<table>
	<tr>
		<td><%= f.label "前のパスワード:" %></td>
		<td><%= f.password_field :password %></td><!-- :adminPassをpassword属性とかにして照合出来るようにする -->
	</tr>
	<tr>
		<td><%= f.label "新しいパスワード:" %></td>
		<td><%= password_field :admin :new_password %></td>
	</tr>
	<tr>
		<td><%= f.label "新しいパスワードの再入力:" %></td>
		<td><%= password_field :admin :new_password_confirmation %></td>
	</tr>
	<tr>
		<td><%= f.submit "変更" %></td>
	</tr>
</table>
<% end %>
<%= link_to "戻る", :admin_top %>